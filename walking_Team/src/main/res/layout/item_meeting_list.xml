<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:id="@+id/meetingListItem">

    <ImageView
        android:id="@+id/meetingListImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/apeach002" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meetingListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:text="7월 놀러가자" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/meetingListStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022.05.01"/>
            <TextView
                android:id="@+id/meetingDateSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="-"/>
            <TextView
                android:id="@+id/meetingListEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022.05.10"/>
            <TextView
                android:id="@+id/meetingListTid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="trip_id"/>
<!--            <TextView-->
<!--                android:id="@+id/meetingListMem"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:visibility="invisible"-->
<!--                android:text="trip Member"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>